<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <!--用maven创建的web-app需要修改servlet的版本为3.1-->
  <!--配置DispatcherServlet-->
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!--
        配置SpringMVC 需要配置的文件
        spring-dao.xml，spring-service.xml,spring-web.xml
        Mybites -> spring -> springMvc
    -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring/spring-*.xml</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <!--默认匹配所有请求-->
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>System_management/Login.html</welcome-file>
    <welcome-file>System_Demand/equiment_service.html</welcome-file>
    <welcome-file>System_Disable/Demand_catalog.html</welcome-file>
    <welcome-file>System_Assess/check_assess_report.html</welcome-file>
    <welcome-file>System_Company/company_attend_plan.html</welcome-file>
    <welcome-file>System_Demand/demand_directory.html</welcome-file>
    <welcome-file>System_Demand/field_service.html</welcome-file>
    <welcome-file>System_Demand/sport_service.html</welcome-file>
  </welcome-file-list>
</web-app>
        